[
  {
    "name": "${image_name}",
    "image": "${ecr_repo}:${version_tag}",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "us-west-2",
        "awslogs-stream-prefix": "tucklets/ecs/",
        "awslogs-group": "awslogs-tucklets"
      }
    },
    "portMappings": [
      {
        "containerPort": 8443,
        "hostPort": 8443,
        "protocol": "tcp"
      }
    ],
    "networkMode": "awsvpc",
    "environment": [
      {
        "name": "PAYPAL_CLIENT_ID",
        "value": "${paypal_client_id}"
      }
    ]
  }
]